page{
  width: 100%;
  height: 100%;
}

.headerView {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.avatarImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50px;
}

.nameTetx {
  font-size: 24rpx;
  color: white;
  padding: 20rpx 20rpx;
}

.bgView{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #62BCC9;
}

.indexBgImg{
  margin-left: 10%;
  margin-top: 20rpx;
  width: 80%;
  height: 80%;
}

.addImg{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  left: 47%;
}

.addButton{
  position: absolute;
  width: 50%;
  height: 100rpx;
  top: 48%;
  left: 25%;
  color: white;
  font-size: 28rpx;
  opacity:0;
  padding: 5rpx;
}

.cloudView{
  /* background-color: red; */
  width: 100%;
  height: 100rpx;
  margin-top: -300rpx;
  display: flex;
  flex-direction: row;
}

.cloud1{
 width:32px; 
 height:12px;
 margin-top: -40rpx;  
 animation: cloud 20s linear infinite;
}

.cloud2{
 width:32px; 
 height:12px;
 margin-top: -15rpx; 
 animation: pic 40s linear infinite;
}

.cloud3{
 width:32px; 
 height:32px;
 margin-top: 0rpx; 
 animation: pic 60s linear infinite;
}


@keyframes cloud {
 from {
 transform: translate3d(0rpx, 0, 0);
 }
 
 to {
 transform: translate3d(750rpx, 0, 0);
 }
}

@keyframes pic {

  from {
 transform: translate3d(-540rpx, 0, 0);
 }
 
 to {
 transform: translate3d(850rpx, 0, 0);
 }
}